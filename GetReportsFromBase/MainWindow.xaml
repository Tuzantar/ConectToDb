<Window x:Class="GetReportsFromBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetReportsFromBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="170" Width="200">
    <Grid>
        <Grid Margin="0,0,0,5">
            <Button Content="Connect" HorizontalAlignment="Center" Margin="0,106,0,3" Width="179" Click="Button_Click"/>
            <TextBox HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Name="txt_ip" ToolTip="Server Name"/>
            <ComboBox HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" Width="180" Name="cmbx" IsEditable="True" ToolTip="DB Name"/>
            <TextBox HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Name="txt_id" ToolTip="User"/>
            <PasswordBox HorizontalAlignment="Center" Margin="0,83,0,0" PasswordChar="*" VerticalAlignment="Top" Width="180" Name="txt_pwd" ToolTip="Password"/>

        </Grid>

    </Grid>
</Window>
