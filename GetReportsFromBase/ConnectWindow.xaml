<Window x:Class="GetReportsFromBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetReportsFromBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200">
    <Grid Margin="0,0,0,5">
        <Button Content="Connect" HorizontalAlignment="Center" Margin="0,106,0,0" VerticalAlignment="Top" Width="179" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="ServerName" VerticalAlignment="Top" Width="180" Name="txt_ip"/>
        <TextBox HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Name="txt_id"/>
        <PasswordBox HorizontalAlignment="Center" Margin="0,83,0,0" PasswordChar="*" VerticalAlignment="Top" Width="180" Name="txt_pwd"/>
        <ComboBox HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" Width="180" Name="cmbx"/>

    </Grid>
</Window>
